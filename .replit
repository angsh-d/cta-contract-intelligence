modules = ["python-3.12", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd /home/runner/workspace/backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload & sleep 2 && cd /home/runner/workspace/frontend && npx vite --host 0.0.0.0 --port 5000\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 5000"]
build = ["npm", "run", "build"]
